package chatsapp_client {
    class Client {
        - socket: Socket
        - bWriter: BufferedWriter
        - bReader: BufferedReader

        + Client(socket: Socket)
        + sendToServer(message: String): void
        + startReadingFromServer(chatHistory: VBox): void
    }

    class ClientApplication {
        + start(stage: Stage): void
        + main {static}(args: String[]): void
    }

    class ClientController {
        - txtInput: TextField
        - anchorPane: AnchorPane
        - scrollBar: ScrollBar
        - chatHistory: VBox
        - client: Client

        + initialize(url: URL, resourceBundle: ResourceBundle): void
        + clientLabel(serverMessage: String, chatHistory: VBox): void
    }

}

Socket <-- Client
BufferedWriter <-- Client
BufferedReader <-- Client
VBox <-- Client

Stage <-- ClientApplication

Button <-- ClientController
TextField <-- ClientController
AnchorPane <-- ClientController
ScrollBar <-- ClientController
VBox <-- ClientController
Client <-- ClientController


ClientApplication ..> ClientController: Create

ClientController *..> Client

Server ..> Client: Chat Starts
Client ..> Server: Chat



chatsapp.Server --> chatsapp_client.Client : <<use>>



@enduml

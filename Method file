public String getMessage() {
        return message;
    }
	public void sendMessageToUser(String message) {
		try {
		out.println(message);
	}
		catch  (IOException e){
			e.printStackTrace();
		}
	}
	public boolean showStatus() {
		if(Connected = true) {
			return true;
		}
		else{
			return false;
		}
	}
	public Server(ServerSocket socket) {
		this.socket = socket;
	}
	public void exit() {
		try {
			if(socket != null) {
				socket.close();
			}
		}
		catch (IOException e){
			e.printStackTrace();
		}
}
